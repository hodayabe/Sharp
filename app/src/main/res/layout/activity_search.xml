<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.this_user.myapplication.Search_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We found a charger for you!"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:fontFamily="casual" />


    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/textButton2"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:fontFamily="sans-serif"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/textButton3"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textButton1"
        android:textStyle="normal|italic"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:cursorVisible="false"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Lior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="5mm"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Moshe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="5mm"
        android:layout_alignBottom="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Guy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="5mm"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:text="I want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:visibility="visible"
        android:background="?android:attr/colorAccent"
        android:layout_marginTop="74dp"
        android:fontFamily="sans-serif"
        tools:ignore="NewApi"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="I want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:visibility="visible"
        android:onClick="viewData3 (MainActivity)"
        android:background="@color/colorAccent"
        android:layout_above="@+id/textButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:text="I want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:visibility="visible"

        android:onClick="viewData2 (MainActivity)"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/textButton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
